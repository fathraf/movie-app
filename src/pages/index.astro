	<html lang="en">
		<head>
			<meta charset="utf-8" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<meta name="viewport" content="width=device-width" />
			<meta name="generator" content={Astro.generator} />
			<link rel="stylesheet" href="/styles/global.css">

			<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=search" />
			<title>YouTube Movies Collections</title>
		</head>
		<body>
			<header class="header">
				<h1 class="header__title">YouTube Movies</h1>
				<div class = "header__search">
					<input type="search" class="header__search-input" id="searchInput" placeholder="Search movies...">
					<span class="header__search-icon material-symbols-outlined">search</span>
				</div>
			</header>

			<main class="movies">
				<div class="movies__grid">
					{movies.map((movie) => (
						<a
							href={movie.youtubeUrl}
							class="movies__link"
							data-title={movie.title.toLowerCase()}>
							<div class="movies__card">
								<div class="movies__image-container">
									<img
										class="movies__image"
										src={movie.image}
										alt={movie.title}
									/>
									<div class="movies__overlay"></div>
								</div>
							</div>

							<div class="movies__info">
								<h2 class="movies__name">{movie.title}</h2>
								<p class="movies__year">
									{movie.year} â€¢ {movie.genre}
								</p>
							</div>
						</a>
					))}			

				</div>

				<p class="no-results" style="display: none;">No movies found!</p>
			</main>

			<script src="/scripts/search.js" type="module"></script>

	</body>
</html>
